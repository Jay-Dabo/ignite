<div class="jumbotron bg-bible white">
  <div style="width: 100%" class="right btn-new">
    <% if can? :create, SpiritCharge %>
      <%= link_to 'New +', new_spirit_charge_path, class: 'btn btn-success bold' %>
    <% end %>
  </div>

  <h1 class="display-4">
    Spirit Charge
  </h1>
  <p class="lead">
    For your spiritual recharge!
  </p>
  <hr class="my-4">
  <p>Lets Make an Impact.</p>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% if can? :read, SpiritCharge %>
      <% @spirit_charges.each_with_index do |spirit, index| %>
      <% next if current_user.readings.map(&:spirit_charge_id).include?(spirit.id) %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= spirit.title %></td>
          <td><%= spirit.description %></td>
          <td>
            <!-- Some actions here -->
            <%= link_to read_spirit_charges_path(spirit_charge_id: spirit) do %>
              <i class="fas fa-calendar-check" style="color: lime"></i>
            <% end %>

            <% if can? :manage, SpiritCharge %>
              <%= link_to edit_spirit_charge_path(spirit) do %>
                <i class="fas fa-edit"></i>
              <% end %>
              <%= link_to spirit_charge_path(spirit), method: :delete, :data => { :title => 'Deleting Spirit', :confirm => 'Are you sure want to delete spirit?' } do %>
                <i class="fas fa-trash-alt" style="color: red"></i>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
