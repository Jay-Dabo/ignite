<div class="jumbotron bg-bible white">
  <h1 class="display-4">Spirit Charge</h1>
  <p class="lead">
    For your spiritual recharge!
  </p>
  <hr class="my-4">
  <p>Lets Make an Impact.</p>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @spirit_charges.each_with_index do |spirit, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= spirit.title %></td>
        <td><%= spirit.description %></td>
        <td>
          <!-- Some actions here -->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
